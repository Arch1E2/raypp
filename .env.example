# Example .env for RayPP
# Copy to .env and fill secrets before running

# Postgres (history database)
POSTGRES_USER=raypp
POSTGRES_PASSWORD=raypp_password
POSTGRES_DB=raypp_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis (cache)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Cache settings
CACHE_PREFIX=ask
CACHE_TTL_SECONDS=3600

# Qdrant (vector DB)
QDRANT_URL=https://your-qdrant-host:6333
QDRANT_API_KEY=your_qdrant_api_key

# Media storage (local)
MEDIA_ROOT=media

# Application binding
APP_HOST=0.0.0.0
APP_PORT=8000

# OpenAI
OPENAI_API_KEY=your_openai_key
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Docker entrypoint behavior
SKIP_TESTS=1
